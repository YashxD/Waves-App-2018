<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bits_waves.waves2017">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.OurTeam" />
        <activity android:name=".Activities.RegActivity" />
        <activity android:name=".Activities.Events" />
        
        <activity android:name=".tabs.Day0" />
        <activity android:name=".tabs.Day1" />
        <activity android:name=".tabs.Day2" />
        <activity android:name=".tabs.Day3" />
        <activity android:name=".tabs.Day1Nights" />
        <activity android:name=".tabs.Day2Nights" />
        <activity android:name=".tabs.Day3Nights" />
        <activity android:name=".tabs.AboutEvent" />
        <activity android:name=".tabs.RuleBook"></activity>

        <service
            android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>

</manifest>